
@{
    ViewBag.Title = "ViewCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>View Customer</h1>

<br />

<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Customer ID</th>
        <th>Customer Name</th>
        <th>Phone Number</th>
        <th>Email Address</th>
        <th>Agent</th>
        <th>Update Customer</th>
        <th>Delete Customer</th>

    </tr>
    </thead>

    <tbody>
    @foreach (var cust in Model)
    {
        <tr>
            <td>@cust.CustID</td>
            <td>@cust.CustName</td>
            <td>@cust.CustPhoneNum</td>
            <td>@cust.CustEmail</td>
            <td>@cust.CustAgent</td>
            <td>@Html.ActionLink("Update", "EditCustomer", "Customer", new {custID = cust.CustID}, null)</td>
            <td>@Html.ActionLink("Delete", "EditCustomer", "Customer", new {custID = cust.CustID}, null)</td>
        </tr>
    }
    </tbody>
</table>

<hr/>

