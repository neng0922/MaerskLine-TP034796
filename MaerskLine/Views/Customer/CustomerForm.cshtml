@using Microsoft.AspNet.Identity
@model MaerskLine.Models.Customer
@{
    ViewBag.Title = "CustomerForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customer Form</h1>

<br />

@using (Html.BeginForm("SaveCustomer", "Customer"))
{
    @Html.HiddenFor(m => m.CustID)

    <div class="form-group">
        @Html.LabelFor(m => m.CustName)
        @Html.TextBoxFor(m => m.CustName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CustName)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CustPhoneNum)
        @Html.TextBoxFor(m => m.CustPhoneNum, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CustPhoneNum)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CustEmail)
        @Html.TextBoxFor(m => m.CustEmail, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CustEmail)
    </div>

    <button type="submit" class="btn-primary">Save</button>
}

<hr />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
