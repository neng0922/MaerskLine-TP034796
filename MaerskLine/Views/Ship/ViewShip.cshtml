@{
    ViewBag.Title = "ViewShip";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>View Ship</h1>

<br />

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Ship ID</th>
            <th>Ship Name</th>
            <th>Number of Container</th>
            <th>Remaining Container</th>
            <th>Availability</th>
            <th>Update Ship</th>
            <th>Delete Ship</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var ship in Model)
        {
            <tr>
                <td>@ship.ShipID</td>
                <td>@ship.ShipName</td>
                <td>@ship.ShipContainerNum</td>
                <td>@ship.ShipContainerNumRemaining</td>
                <td>@ship.ShipAvailability</td>
                <td>@Html.ActionLink("Update", "EditShip", "Ship", new { shipID = ship.ShipID }, null)</td>
                <td>@Html.ActionLink("Delete", "EditShip", "Ship", new { shipID = ship.ShipID }, null)</td>
            </tr>
        }
    </tbody>
</table>

<hr/>
