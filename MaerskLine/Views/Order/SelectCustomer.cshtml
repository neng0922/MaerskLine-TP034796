@using MaerskLine.ViewModel

@{
    ViewBag.Title = "SelectCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Select Customer</h1>

<br />

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Phone Number</th>
            <th>Email Address</th>
            <th>Agent</th>
            <th>Select Customer</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var cust in Model)
        {
            <tr>
                <td>@cust.CustID</td>
                <td>@cust.CustName</td>
                <td>@cust.CustPhoneNum</td>
                <td>@cust.CustEmail</td>
                <td>@cust.CustAgent</td>
                <td>@Html.ActionLink("Select", "OrderForm", "Order", new {custID = cust.CustID }, null)</td>
            </tr>
        }
    </tbody>
</table>

<hr />

