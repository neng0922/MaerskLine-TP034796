@*@model MaerskLine.ViewModel.ScheduleCustomerOrderViewModel*@

@{
    ViewBag.Title = "ViewOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>View Order</h1>

<br />

@if (TempData["OrderSuccessMsg"].Equals(true))
{
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>The order has been saved SUCCESSFULLY!</strong>
    </div>
}

<table id="ViewOrderTable" class="table table-bordered table-hover">
    <thead>
    <tr class="success">
        <th>Order ID</th>
        
        @*<th>Container ID</th>*@
        <th>Container Item</th>
        <th>Container Number</th>
        <th>Container Weight</th>

        @*<th>Schedule ID</th>*@
        <th>Origin</th>
        <th>Destination</th>
        <th>Departure DateTime</th>
        <th>Arrival DateTime</th>

        @*<th>Ship ID</th>*@
        <th>Ship Name</th>

        @*<th>Customer ID</th>*@
        <th>Customer Name</th>
        <th>Customer Phone Number</th>
        <th>Customer Email</th>
        @*<th>Customer Agent</th>*@
        
        <th>Order Agent</th>
        <th>Order Delivered</th>
    </tr>
    </thead>

    <tbody>
    @foreach (var container in Model)
    {
        <tr>
            <td>@container.OrderID</td>

            @*<td>@container.ContainerID</td>*@
            <td>@container.ContainerItem</td>
            <td>@container.ContainerNum</td>
            <td>@container.ContainerWeight</td>

            @*<td>@container.Order.ScheduleID</td>*@
            <td>@container.Order.Schedule.ScheduleOrigin</td>
            <td>@container.Order.Schedule.ScheduleDestination</td>
            <td>@container.Order.Schedule.ScheduleDepartureDateTime</td>
            <td>@container.Order.Schedule.ScheduleArrivalDateTime</td>

            @*<td>@container.Order.Schedule.ShipID</td>*@
            <td>@container.Order.Schedule.Ship.ShipName</td>

            @*<td>@container.Order.CustID</td>*@
            <td>@container.Order.Customer.CustName</td>
            <td>@container.Order.Customer.CustPhoneNum</td>
            <td>@container.Order.Customer.CustEmail</td>
            @*<td>@container.Order.Customer.CustAgent</td>*@
            
            <td>@container.Order.OrderAgent</td>
            <td>@container.Order.OrderDelivered</td>
        </tr>
    }
    </tbody>
</table>

<hr/>

@section scripts
{
    <script>
        $(document).ready(function() {
            $('#ViewOrderTable').DataTable();
        });
    </script>
}

