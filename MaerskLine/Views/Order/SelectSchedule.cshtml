@{
    ViewBag.Title = "SelectSchedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Select Schedule</h1>

<br />

<table id="SelectScheduleTable" class="table table-bordered table-hover">
    <thead>
    <tr class="success">
        <th>Schedule ID</th>
        <th>Origin</th>
        <th>Destination</th>
        <th>Departure DateTime</th>
        <th>Arrival DateTime</th>
        <th>Ship ID</th>
        <th>Ship Name</th>
        <th>Ship Containers Remaining</th>
        <th>Select Schedule</th>
    </tr>
    </thead>

    <tbody>
    @foreach (var schedule in Model)
    {
        <tr>
            <td>@schedule.ScheduleID</td>
            <td>@schedule.ScheduleOrigin</td>
            <td>@schedule.ScheduleDestination</td>
            <td>@schedule.ScheduleDepartureDateTime</td>
            <td>@schedule.ScheduleArrivalDateTime</td>
            <td>@schedule.ShipID</td>
            <td>@schedule.Ship.ShipName</td>
            <td>@schedule.Ship.ShipContainerNumRemaining</td>
            <td>@Html.ActionLink("Select", "SelectCustomer", "Order", new { scheduleID = schedule.ScheduleID }, null)</td>
            @*<td>@Html.ActionLink("Delete", "EditShip", "Ship", new { shipID = ship.ShipID }, null)</td>*@
        </tr>
    }
    </tbody>
</table>

<hr/>

@section scripts
{
    <script>
        $(document).ready(function() {
            $('#SelectScheduleTable').DataTable();
        });
    </script>
}
