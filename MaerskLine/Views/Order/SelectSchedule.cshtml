@

@{
    ViewBag.Title = "SelectSchedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Select Schedule</h1>

<br />

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Schedule ID</th>
            <th>Origin</th>
            <th>Destination</th>
            <th>Departure DateTime</th>
            <th>Arrival DateTime</th>
            <th>Ship ID</th>
            <th>Ship Name</th>
            <th>Select Customer</th>
            <th>Select Schedule</th>
        </tr>
    </thead>

    <tbody>
            <tr>
                <td>@schedule.ScheduleID</td>
                <td>@schedule.ScheduleOrigin</td>
                <td>@schedule.ScheduleDestination</td>
                <td>@schedule.ScheduleDepartureDateTime</td>
                <td>@schedule.ScheduleArrivalDateTime</td>
                <td>@schedule.ShipID</td>
                <td>@schedule.Ship.ShipName</td>
                <td>@Html.DropDownListFor(m => m.Schedule.ShipID, new SelectList(Model.Ships, "ShipID", "ShipName"), new {@class = "form-control" })</td>
                <td>@Html.ActionLink("Select", "SelectCustomer", "Order", new { scheduleID = schedule.ScheduleID }, null)</td>
            </tr>
    </tbody>
</table>
